<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/colorAccent5"
    >

    <RelativeLayout
android:background="@color/colorAccent5"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:textSize="20dp"
            android:textColor="@color/colorAccent2"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food order" />

        <ImageView
            android:layout_marginTop="5dp"
android:src="@drawable/gi"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true" />

        <RelativeLayout
            android:background="@drawable/backgrow"

            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
           >
            <TextView
                android:id="@+id/demso"
                android:layout_marginLeft="4dp"
             android:gravity="center"
                android:text="0"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:background="@color/colorAccent3"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/colorAccent4"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
           android:layout_gravity="center"
            android:text="Wekcome KhoaiHA" />
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:background="@color/colorAccent3"
        android:id="@+id/recyclerview"
        android:layout_width="wrap_content"
        android:layout_height="400dp">

    </androidx.recyclerview.widget.RecyclerView>


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:textColor="@color/colorAccent2"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Price" />

        <TextView
            android:textColor="@color/colorAccent2"
            android:textSize="20dp"
            android:id="@+id/tien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="0$" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:textSize="20dp"
            android:layout_gravity="center"
            android:background="@drawable/backgrow"
            android:id="@+id/order"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Order"
            android:textColorHint="@color/colorAccent2" />
    </LinearLayout>



</LinearLayout>